<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LoadingView">
        <!-- 图形大小 -->
        <attr name="shapeSize" format="dimension"></attr>
        <!-- 图形三种颜色-->
        <attr name="triangleColor" format="color"></attr>
        <attr name="squareColor" format="color"></attr>
        <attr name="circleColor" format="color"></attr>
        <!-- 图形弹跳高度 -->
        <attr name="shapeScrollHeight" format="dimension"></attr>
        <!-- 阴影宽度 -->
        <attr name="shadowWidth" format="dimension"></attr>
        <!-- 阴影高度 -->
        <attr name="shadowHeight" format="dimension"></attr>
        <!-- 阴影颜色 先不弄-->
        <!-- 字体大小 -->
        <attr name="textSize" format="dimension"></attr>
        <!-- 字体颜色 -->
        <attr name="textColor" format="color"></attr>
        <!--文本 -->
        <attr name="text" format="string"></attr>
    </declare-styleable>

</resources>